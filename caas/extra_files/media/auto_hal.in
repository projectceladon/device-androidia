update_codec() {
case "$(cat /proc/fb)" in
        *i915drmfb)
                echo "Intel"
                setprop vendor.intel.video.codec hardware
                ;;
        *inteldrmfb)
                echo "Intel"
                setprop vendor.intel.video.codec hardware
                ;;
        *i915)
                echo "Intel"
                setprop vendor.intel.video.codec hardware
                ;;
        *)
                echo "Intel SRIOV"
                setprop vendor.intel.video.codec hardware
                ;;
esac
}
update_codec
